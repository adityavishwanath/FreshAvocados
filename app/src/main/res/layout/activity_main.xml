<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs2340.officehours.freshavocados.controller.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:id="@+id/logoutButton"
        android:enabled="true"
        android:clickable="true"
        android:onClick="onClickLogout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_profile"
        android:id="@+id/editProfile"
        android:onClick="onClickEdit"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/searchButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:id="@+id/searchButton"
        android:clickable="true"
        android:enabled="true"
        android:onClick="onClickSearch"
        android:layout_above="@+id/top_button"
        android:layout_toEndOf="@+id/recommended_button_major"
        android:layout_marginBottom="70dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchField"
        android:hint="@string/search"
        android:layout_above="@+id/top_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_toStartOf="@+id/searchButton"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_rentals"
        android:id="@+id/top_button"
        android:layout_above="@+id/new_button_theatres"
        android:layout_alignStart="@+id/recommended_button_major"
        android:layout_toStartOf="@+id/searchButton"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:enabled="true"
        android:onClick="onClickTopRentals" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_to_theaters"
        android:id="@+id/new_button_theatres"
        android:layout_above="@+id/new_button_dvd"
        android:layout_alignStart="@+id/top_button"
        android:layout_alignEnd="@+id/top_button"
        android:onClick="onClickNewTheatres"
        android:enabled="true"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_dvd"
        android:id="@+id/new_button_dvd"
        android:layout_above="@+id/recommended_button_major"
        android:layout_alignStart="@+id/top_button"
        android:layout_alignEnd="@+id/recommended_button_major"
        android:clickable="true"
        android:enabled="true"
        android:onClick="onClickNewDVD" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recommend_major"
        android:id="@+id/recommended_button_major"
        android:layout_above="@+id/recommend_button_all"
        android:layout_centerHorizontal="true"
        android:onClick="onClickRecommendedMajor"
        android:enabled="true"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recommend_all"
        android:id="@+id/recommend_button_all"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/editProfile"
        android:layout_alignStart="@+id/recommended_button_major"
        android:layout_alignEnd="@+id/recommended_button_major"
        android:enabled="true"
        android:clickable="true"
        android:onClick="onClickRecommendedAll" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/or"
        android:id="@+id/or"
        android:layout_above="@+id/top_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/main_logo"
        android:src="@drawable/avocado_logo"
        android:clickable="false"
        android:baselineAlignBottom="false"
        android:adjustViewBounds="false"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo" />


</RelativeLayout>
